<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.android.pacificist.helloandroid.data.model.Gallery" />

        <variable
            name="adapter"
            type="com.android.pacificist.helloandroid.ui.GalleryAdapter" />

        <import type="android.view.View" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="@{()->adapter.showDetail(model)}"
        android:onLongClick="@{()->adapter.startDragSelection(model)}">

        <androidx.appcompat.widget.AppCompatImageView
            signature="@{model.signature}"
            url="@{model.path}"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|bottom"
            android:onClick="@{()->model.toggleSelected()}"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@{model.isSelected? @drawable/ic_selected : @drawable/ic_unselected}" />
    </FrameLayout>
</layout>
